<h1><%= @company.company_name %> opportunities</h1>

<table id="opportunities" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>

  <% @opportunities.each do |opportunity| %>
    <tr>
      <td><%= opportunity.name %></td>
      <td><%= opportunity.address1 %></td>
      <td><%= opportunity.address2 %></td>
      <td><%= opportunity.city %></td>
      <td><%= opportunity.state %></td>
      <td><%= opportunity.zipcode %></td>
      <td><%= opportunity.lat %></td>
      <td><%= opportunity.lng %></td>
    </tr>
  <% end %>
</table>
<br />
<%= button_to 'Notify Customer', notify_company_admin_company_opportunities_path(@company), :class => 'btn btn-success' %>
