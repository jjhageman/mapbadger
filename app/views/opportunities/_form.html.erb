<%= form_for(@opportunity) do |f| %>
  <% if @opportunity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@opportunity.errors.count, "error") %> prohibited this opportunity from being saved:</h2>

      <ul>
      <% @opportunity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset>
    <legend>Individual Opportunity</legend>
    <div class="clearfix">
      <%= f.label :name, 'Prospect Name' %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :address1, 'Address 1' %>
      <div class="input">
        <%= f.text_field :address1 %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :address2, 'Address 2' %>
      <div class="input">
        <%= f.text_field :address2 %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :city %>
      <div class="input">
        <%= f.text_field :city %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :state %>
      <div class="input">
        <%= f.select :state, [[ "Select a State", "" ]] + State::NAMES %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :zipcode, 'Zip Code' %>
      <div class="input">
        <%= f.text_field :zipcode %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Add', :class => 'btn primary' %>
    </div>
  </fieldset>
<% end %>
