<h1>Listing opportunities</h1>

<%= form_tag destroy_multiple_opportunities_path, :method => :delete do |f| %>
  <table id="opportunities" class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>
          <%= button_tag(:type => 'submit', :confirm => 'Are you sure?', :disabled => true, :id => 'delete-options', :class => 'btn btn-mini disabled') do %>
            <i class="icon-trash"></i> Delete
          <% end %>
        </th>
        <th>Name</th>
        <th>Address1</th>
        <th>Address2</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
      </tr>
    </thead>

    <% @opportunities.each do |opportunity| %>
      <tr>
        <td class="delete"><%= check_box_tag "opportunity_ids[]", opportunity.id, false, :class => 'delete_box' %></td>
        <td><%= opportunity.name %></td>
        <td><%= opportunity.address1 %></td>
        <td><%= opportunity.address2 %></td>
        <td><%= opportunity.city %></td>
        <td><%= opportunity.state %></td>
        <td><%= opportunity.zipcode %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<br />

<%= link_to 'New Opportunity', new_opportunity_path %>
