<h1>New account</h1>

<div class="well">
  <%= form_for :upload do |f| %>
    <fieldset>
      <legend>Upload Account Records</legend>
      <p class="help-block">Upload CSV files that contain addresses of businesses that you want to view on the territory map. Only .CSV files with the following columns will upload properly: Name, StreetAddress, City, State, ZipCode, Latitude, Longitude</p>
      <%= f.file_field :csv, :class => 'input-file' %>
      <div class="form-actions">
        <%= f.submit 'Import', :class => 'btn btn-primary' %>
      </div>
    </fieldset>
  <% end %>
</div>
<div class="well">
  <%= render 'form' %>
</div>
