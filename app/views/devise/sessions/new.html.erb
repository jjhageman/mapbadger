<h2>Sign in</h2>
<div class="well row-fluid">
  <div class="span7">
    <%= link_to "Sign in with Salesforce", company_omniauth_authorize_path(:salesforce) %>
    <%= link_to "callback", company_omniauth_callback_url(:salesforce) %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
          <%= f.check_box :remember_me %>Remember me
        </label>
      <% end -%>

      <div>
        <%= f.submit "Sign in", :class => 'btn btn-primary' %>
      </div>
    <% end %>
    <%= link_to 'Forgot password?', forgot_password_path %> | <%= link_to 'Resend registration email?', resend_path %>
  </div>
</div>
