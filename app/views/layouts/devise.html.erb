          <head>
            <meta charset="utf-8">

            <title>Mapbadger</title>
            <%= stylesheet_link_tag    "application" %>
            <%= javascript_include_tag "application" %>
            <%= csrf_meta_tags %>
            <%= render 'shared/mixpanel' %>
          </head>
          <body>
            <div class="navbar navbar-fixed-top">
              <div class="navbar-inner">
                <div class="container-fluid">
                  <%= link_to 'MapBadger', root_path, :class => 'brand' %> 
                  <ul class="nav">
                  </ul>
                  <ul class="nav pull-right">
                    <%= render 'devise/menu/registration_items' unless current_page?(register_path)%>
                    <%= render 'devise/menu/login_items' unless current_page?(login_path) %>
                  </ul>
                </div>
              </div>
            </div> <!-- end topbar -->

            <div class="container">
              <div class="content">
                <% flash.delete(:timedout).each do |key, msg| %>
                  <%= content_tag :div, msg, :class => "alert alert-#{key}" unless msg.blank? %>
                <% end %>
                <%= yield %>
              </div>
            </div>
          </body>
        </html>


