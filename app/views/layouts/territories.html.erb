          <head>
            <meta charset="utf-8">

            <title>Mapbadger</title>
            <%= stylesheet_link_tag    "bootstrap.min.css" %>
            <%= stylesheet_link_tag    "application" %>
            <%= javascript_include_tag "http://maps.google.com/maps/api/js?libraries=geometry&sensor=false" %>
            <%= javascript_include_tag "application" %>
            <%= javascript_include_tag "heatmap" %>
            <%= javascript_include_tag "heatmap-gmap" %>
            <%= csrf_meta_tags %>
          </head>
          <body class="map">
            <div class="topbar">
              <div class="topbar-inner">
                <%= link_to_unless_current 'MapBadger', root_path, :class => 'brand' %> 
                <div class="container-fluid">
                  <ul class="nav">
                    <li><%= link_to_unless_current 'Home', territories_path %></li>
                    <li><%= link_to_unless_current 'Import', import_opportunities_path %></li>
                    <li><%= link_to 'Settings', '#' %></li>
                  </ul>
                </div>
              </div>
            </div> <!-- end topbar -->

            <div class="container-fluid">
              <div class="sidebar">
              </div>
              <div class="content">
                <%= yield %>
              </div>
            </div>
          </body>
        </html>



