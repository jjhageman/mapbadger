          <head>
            <meta charset="utf-8">

            <title>Mapbadger</title>
            <%= stylesheet_link_tag    "application" %>
            <%= javascript_include_tag "http://maps.google.com/maps/api/js?libraries=geometry&sensor=false" %>
            <%= javascript_include_tag "application" %>
            <%= csrf_meta_tags %>
          </head>
          <body class="map">
            <div class="navbar navbar-fixed-top">
              <div class="navbar-inner">
                <div class="container-fluid">
                  <%= link_to_unless_current 'MapBadger', root_path, :class => 'brand' %> 
                  <ul class="nav">
                    <%= nav_li 'Home', territories_path %>
                    <%= nav_li 'Import', import_opportunities_path %>
                    <%= nav_li 'Settings', '#' %>
                    <%= nav_li 'Saved Maps', '#' %>
                  </ul>
                  <p class="navbar-text pull-right">
                    <ul class="hmenu">
                    <%= render 'devise/menu/registration_items' %>
                    <%= render 'devise/menu/login_items' %>
                    </ul>
                  </p>
                </div>
              </div>
            </div> <!-- end topbar -->

            <div class="container-fluid">
              <div class="sidebar"></div>
              <div class="content">
                <p class="notice"><%= notice %></p>
                <p class="alert"><%= alert %></p>
                <%= yield %>
              </div>
            </div>
          </body>
        </html>



