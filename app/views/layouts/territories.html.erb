          <head>
            <meta charset="utf-8">

            <title>Mapbadger</title>
            <%= stylesheet_link_tag    "application" %>
            <%= javascript_include_tag "http://maps.google.com/maps/api/js?libraries=geometry&sensor=false" %>
            <%= javascript_include_tag "application", "territories" %>
            <%= csrf_meta_tags %>
          </head>
          <body>
            <%= render 'shared/nav_bar' %>
            <div id="map-content" class="container-fluid">
              <div class="row-fluid">
                <div id="sidebar" class="span3"></div>
                <div id="content" class="span9">
                  <% flash.each do |key, msg| %>
                    <%= content_tag :p, msg, :class => "flash #{key}" %>
                  <% end %>
                  <%= yield %>
                </div>
              </div>
            </div>
          </body>
        </html>



