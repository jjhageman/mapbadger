<h1>Listing representatives</h1>

<%= form_tag destroy_multiple_representatives_path, :method => :delete do |f| %>
  <table id="representatives" class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>
          <%= button_tag(:type => 'submit', :confirm => 'Are you sure?', :disabled => true, :id => 'delete-options', :class => 'btn btn-mini disabled') do %>
            <i class="icon-trash"></i> Delete
          <% end %>
        </th>
        <th>First name</th>
        <th>Last name</th>
        <th></th>
      </tr>
    </thead>

    <% @representatives.each do |representative| %>
      <tr>
        <td class="delete"><%= check_box_tag "representative_ids[]", representative.id, false, :class => 'delete_box' %></td>
        <td><%= representative.first_name %></td>
        <td><%= representative.last_name %></td>
        <td><%= link_to 'Edit', edit_representative_path(representative) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<br />

<%= link_to 'New Representative', new_representative_path %>
