<div id="regions"></div>

<script type="text/javascript">
  $(function() {
    // Blog is the app name
    window.router = new Mapbadger.Routers.RegionsRouter({regions: <%= @regions.to_json.html_safe -%>});
    Backbone.history.start();
  });
</script>

<h1>Listing regions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Fipscode</th>
    <th>Coords</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @regions.each do |region| %>
  <tr>
    <td><%= region.name %></td>
    <td><%= region.fipscode %></td>
    <td><%= region.coords %></td>
    <td><%= link_to 'Show', region %></td>
    <td><%= link_to 'Edit', edit_region_path(region) %></td>
    <td><%= link_to 'Destroy', region, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

